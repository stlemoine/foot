{% extends '::Appli/layout.html.twig' %}


{% block title %} {{ parent() }}|equipe|{{'grid.edit'|trans}} {% endblock %}

{% block appli_content %}

{{ form_start(edit_form) }}

    <h1>
        {{'menu.equipe'|trans}} {{'edition'|trans}}
        {{form_widget(edit_form.submit)}}
        <a href="{{ path('equipe') }}" id="retour" name="retour" class="btn btn-danger btn-xs">{{ 'retour.liste' | trans }}</a>
    </h1>
<div class="row">
    <div class="col-sm-6">
        <div class="row control-group">
            <div class="col-sm-2">
                <label class="control-label" for="textinput">{{ form_label(edit_form.nom) }}</label>
            </div>
            <div class="col-sm-10">
                <div class="controls">
                    {{ form_widget(edit_form.nom) }}
                </div>
            </div>
            {{ form_errors(edit_form.nom) }}
        </div>
        <br/>
        <div class="row control-group">
            <div class="col-sm-3">
                <label class="control-label" for="textinput">{{ "form.imageName" | trans }}</label>
            </div>
            <div class="col-sm-9">
                <div class="controls">
                    {{ form_widget(edit_form.photo) }}{{ form_errors(edit_form.photo) }}
                </div>
            </div>
        </div>
        <br/>
        <div class="row control-group">
            <div class="col-sm-2">
                <label class="control-label" for="textinput">{{ form_label(edit_form.club) }}</label>
            </div>
            <div class="col-sm-10">
                <div class="controls">
                    {{ form_widget(edit_form.club) }}
                </div>
            </div>
            {{ form_errors(edit_form.club) }}
        </div>
        <br/>
        <div class="row control-group">
            <div class="col-sm-2">
                <label class="control-label" for="textinput">{{ form_label(edit_form.saison) }}</label>
            </div>
            <div class="col-sm-10">
                <div class="controls">
                    {{ form_widget(edit_form.saison) }}
                </div>
            </div>
            {{ form_errors(edit_form.saison) }}
        </div>
        <br/>
        <div class="row control-group">
            <div class="col-sm-2">
                <label class="control-label" for="textinput">{{ form_label(edit_form.scoring) }}</label>
            </div>
            <div class="col-sm-10">
                <div class="controls">
                    {{ form_widget(edit_form.scoring) }}
                </div>
            </div>
            {{ form_errors(edit_form.scoring) }}
        </div>
        <br/>
        <div class="row control-group">
            <div class="col-sm-2">
                <label class="control-label" for="textinput">{{ form_label(edit_form.users) }}</label>
            </div>
            <div class="col-sm-10">
                <div class="controls">
                    {{ form_widget(edit_form.users) }}
                </div>
            </div>
            {{ form_errors(edit_form.users) }}
        </div>
        <br/>
    </div>
    <div class="col-sm-6">

         <img src="{{ asset(vich_uploader_asset(entity, 'club_image'))| imagine_filter('large') }}" alt="photo" />

    </div>
</div>
    {{ form_rest(edit_form) }}

{{ form_end(edit_form) }}  

{% endblock appli_content %}
