{% extends '::Appli/layout.html.twig' %}

{% block title %} {{ parent() }}|saison|{{'grid.show'|trans}} {% endblock %}

{% block appli_content %}

    <h1>
        {{'menu.saison'|trans}} 
        <a href="{{ path('saison') }}" id="retour" name="retour" class="btn btn-danger btn-xs">{{ 'retour.liste' | trans }}</a>
    </h1>

    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ entity.debut|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.fin|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

{% endblock appli_content %}
