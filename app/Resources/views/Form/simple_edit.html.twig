{% block form_row %}
{% spaceless %}
<div class="col-sm-12">
    <div class="row control-group">
        <div class="col-sm-2">
        <label class="control-label" for="textinput">{{ form_label(edit_form) }}</label>
        </div>
        <div class="col-sm-10">
        <div class="controls">
        {{ form_widget(edit_form) }}
        </div>
        </div>
        {{ form_errors(edit_form) }}
    </div>
    <br/>
</div>
{% endspaceless %}
{% endblock form_row %}
