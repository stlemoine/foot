{# app/Resources/views/appli/layout.html.twig #}
{% extends '::base.html.twig' %}

{% block body %}

        <div class="row">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                {% set type_slad = type|replace({'fos_user_': ''}) %}
                <div class="alert alert-{{ type_slad }} fade in col-sm-8 col-sm-offset-2">
                    <button class="close" data-dismiss="alert" type="button">Ã—</button>
                    {% if message.title is defined %}
                        <strong>{{ message.title }}</strong>
                    {% endif %}
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
        </div>

        {% block appli_content %}{% endblock %}

{% endblock %}

